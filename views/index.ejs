<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="/codemirror/lib/codemirror.css">
        <link rel="stylesheet" href="/codemirror/theme/base16-dark.css">
        <link rel="stylesheet" href="/css/style.css">
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/jquery/jquery.min.js"></script>
        <script src="/knockout/knockout-latest.js"></script>
        <script src="/codemirror/lib/codemirror.js"></script>
        <script src="/codemirror/mode/javascript/javascript.js"></script>
        <script src="/codemirror/mode/sql/sql.js"></script>
        <script src="/codemirror/mode/clike/clike.js"></script>
        <script src="/codemirror/mode/php/php.js"></script>
        <script src="/codemirror/mode/python/python.js"></script>
        <script src="/codemirror/mode/xml/xml.js"></script>
        <script src="/codemirror/mode/htmlmixed/htmlmixed.js"></script>
        <script type="text/javascript">
            const _codeId = <%- codeId %>;
        </script>
    </head>
    <body>
        <div class="flexbox-parent">

            <div class="flexbox-item fill-area">
                <div class="fill-area-content">
                    <div id="Editor"></div>
                </div>
            </div>
            
            <div class="flexbox-item footer">
                <div class="row">
                    <div class="col-sm">
                        <div data-bind="if: createDate">
                            <div>Data utworzenia: <span data-bind='text: createDate'></span></div>
                            <div>Data modyfikacji: <span data-bind='text: modifyDate'></span></div>
                        </div>
                        <div data-bind="ifnot: createDate">
                            <button data-bind="click: createCode" type="button" class="btn btn-light btn-sm">Podziel się kodem</button>
                        </div>
                    </div>
                    <div class="col-sm">
                        <select class="form-control-sm float-right" data-bind="
                            options: modeOptions,
                            optionsValue: 'value',
                            optionsText: 'name',
                            value: selectedMode,
                            event: {change: modeChanged}
                        "></select>
                    </div>
                </div>
            </div>

        </div>

        <script src="/js/client.js"></script>
    </body>
</html>
